@model IEnumerable<StonkMarket.Models.UserStonk>

@{
    ViewData["Title"] = "TopIndex";
}

<h1>TopIndex</h1>


<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Stonk.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserProfile.DisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stonk.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stonk.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Stonk.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserProfile.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stonk.FlutterPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stonk.Date)
                </td>
                <td class="form-group">
                    @Html.ActionLink("Details", "TopDetails", new { id = item.StonkId }) |
                    @Html.ActionLink("Add to My List", "AddTopStonk", new { id = item.StonkId }, new { @class = "btn" })
                </td>
               
       
       
               
            </tr>
        }
    </tbody>
</table>
