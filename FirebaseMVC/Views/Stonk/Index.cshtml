@model IEnumerable<StonkMarket.Models.Stonk>

@{
    ViewData["Title"] = "Index";
}

<h1>Stonks</h1>

<p>
    <a asp-action="Create">Add a Stonk</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OneYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FiveYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenYear)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OneYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FiveYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenYear)
            </td>
            <td class="form-group">
                <input type="submit" value="Add To Your List" class="btn btn-primary" />
            </td>
        </tr>
}
    </tbody>
</table>
