            </p>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FiveYear)
        </dt>
        @{ var totalFivePrice = Model.FiveYear; }
        <dd class="col-sm-10">
            <p>
                @Math.Round(totalFivePrice, 2)
            </p>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TenYear)
        </dt>
        @{ var totalTenPrice = Model.TenYear; }
        <dd class="col-sm-10">
            <p>
                @Math.Round(totalTenPrice, 2)
            </p>
        </dd>
