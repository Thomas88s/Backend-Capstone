@model StonkMarket.Models.ViewModels.MessageViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Message Form</h1>

<h4>Send a Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <input asp-for="Message.Id" class="form-control" type="hidden" />

            </div>
            <div class="form-group">
                <label asp-for="Message.ReceiverId" class="control-label"></label>
                <select asp-for="Message.ReceiverId" class="form-control">
                    <option value="">Who would you like to send a message to?</option>
                    @foreach (UserProfile userProfile in Model.UserProfiles)
                    {
                        <option value="@userProfile.Id">@userProfile.DisplayName</option>
                    }
                </select>
                <span asp-validation-for="Message.ReceiverId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.Content" class="control-label"></label>
                <input asp-for="Message.Content" class="form-control" />
                <span asp-validation-for="Message.Content" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="Message.SenderId"  class="form-control" type="hidden" />
                <span asp-validation-for="Message.SenderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-group">

                    <input asp-for="Message.CreatedDate" class="form-control" type="hidden" />

                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
